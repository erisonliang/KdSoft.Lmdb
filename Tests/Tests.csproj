<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netcoreapp2.1</TargetFramework>
    <AssemblyName>KdSoft.Lmdb.Tests</AssemblyName>
    <RootNamespace>KdSoft.Lmdb.Tests</RootNamespace>
    <Platforms>AnyCPU;x64;x86</Platforms>
  </PropertyGroup>

  <PropertyGroup>
    <CodeAnalysisRuleSet>..\Solution.ruleset</CodeAnalysisRuleSet>
    <LangVersion>latest</LangVersion>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Google.Protobuf" Version="3.5.1" />
    <PackageReference Include="Google.Protobuf.Tools" Version="3.5.1" />
    <PackageReference Include="KdSoft.FlatBuffers" Version="1.9.1" />
    <PackageReference Include="KdSoft.Serialization" Version="2.0.0-rc1" />
    <PackageReference Include="KdSoft.Utils.Portable" Version="3.6.1" />
    <PackageReference Include="Microsoft.CodeAnalysis.FxCopAnalyzers" Version="2.6.0" />
    <PackageReference Include="Microsoft.DotNet.PlatformAbstractions" Version="2.1.0-rc1" />
    <PackageReference Include="Microsoft.Extensions.Configuration" Version="2.1.0-rc1-final" />
    <PackageReference Include="Microsoft.Extensions.Configuration.Json" Version="2.1.0-rc1-final" />
    <PackageReference Include="MsBuild.ProtocolBuffers" Version="1.1.0" />
    <PackageReference Include="System.Numerics.Vectors" Version="4.5.0-rc1" />
    <PackageReference Include="xunit" Version="2.4.0-beta.1.build3958" />
    <PackageReference Include="xunit.runner.visualstudio" Version="2.4.0-beta.1.build3958" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="TestEnv\" />
  </ItemGroup>
  
  <ItemGroup>
    <ProjectReference Include="..\Lmdb\Lmdb.csproj" />
  </ItemGroup>
  <ItemGroup>
    <None Update="proto\Test.proto">
      <Generator>ProtobufGenerator</Generator>
    </None>
  </ItemGroup>

</Project>
